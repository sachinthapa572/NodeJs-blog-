<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Your Website</title>
    <link rel="stylesheet" href="/signup.css">
    <%- include('./components/import') %>
</head>

<body>
    <%- include('./components/navbar') %>


        <main>
            <div class="login-container">
                <h2>Sign Up</h2>

                <!-- Display error message if exists -->
                <% if (error) { %>
                    <div class="error-message" id="error-msg">
                        <%= error %>
                    </div>
                    <% } %>

                        <form action="/signuppage" method="POST">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" id="username" name="username" required value="test">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" required value="test@gamil.com">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" required value="test">
                            </div>
                            <button type="submit">Sign Up</button>
                        </form>
                        <p>Already have an account? <a href="/loginpage">Login</a></p>
            </div>
        </main>

        <%- include('./components/Footer') %>
</body>
<script src="/error-handler.js"></script>
<script src="/error-handler.js"></script>
<script>
    window.onload = () => {
        hideErrorMessage();
    };
</script>

</html>